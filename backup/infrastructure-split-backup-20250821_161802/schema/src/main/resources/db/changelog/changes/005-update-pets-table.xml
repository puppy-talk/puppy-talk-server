<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet author="system" id="005">
    <addColumn tableName="pets">
      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="persona_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="profile_image_url" type="VARCHAR(500)"/>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP" name="updated_at"
        type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </addColumn>

    <addForeignKeyConstraint
      baseColumnNames="user_id" baseTableName="pets"
      constraintName="fk_pets_user_id" onDelete="CASCADE"
      referencedColumnNames="id"
      referencedTableName="users"/>

    <addForeignKeyConstraint
      baseColumnNames="persona_id" baseTableName="pets"
      constraintName="fk_pets_persona_id" onDelete="RESTRICT"
      referencedColumnNames="id"
      referencedTableName="personas"/>

    <createIndex indexName="idx_pets_user_id" tableName="pets">
      <column name="user_id"/>
    </createIndex>

    <createIndex indexName="idx_pets_persona_id" tableName="pets">
      <column name="persona_id"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>