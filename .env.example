# PuppyTalk Environment Configuration
# Copy this file to .env and configure your environment variables

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=puppytalk
DB_USERNAME=puppytalk
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# Spring Profiles
SPRING_PROFILES_ACTIVE=local

# JVM Configuration
JAVA_OPTS=-Xmx1g -Xms512m

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters
ENCRYPTION_KEY=your_encryption_key_here

# External Services Configuration
# AI Service Configuration (if applicable)
AI_SERVICE_URL=https://api.example.com
AI_SERVICE_API_KEY=your_ai_service_key

# Push Notification Configuration (if applicable)
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/firebase-service-account.json

# Monitoring Configuration
MANAGEMENT_SERVER_PORT=9090

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_PUPPYTALK=DEBUG

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# File Storage Configuration
FILE_STORAGE_PATH=/var/puppytalk/uploads
FILE_MAX_SIZE=10MB