# Puppy Talk Server Environment Configuration
# Copy this file to .env and customize values for your environment

# ======================
# DATABASE CONFIGURATION
# ======================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=puppy_talk_db
MYSQL_USER=puppy_user
MYSQL_PASSWORD=your_secure_db_password_here

# ======================
# REDIS CONFIGURATION  
# ======================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_COMMANDER_PASSWORD=your_admin_password_here

# ======================
# APPLICATION CONFIGURATION
# ======================
ALLOWED_ORIGINS=https://puppytalk.com,https://www.puppytalk.com,https://admin.puppytalk.com

# ======================
# BUILD INFORMATION
# ======================
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=main

# ======================
# MONITORING CONFIGURATION
# ======================
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password_here

# ======================
# DEVELOPMENT ONLY
# ======================
# These are used only in development environment
DEV_MYSQL_ROOT_PASSWORD=1234
DEV_MYSQL_USER=puppy_user  
DEV_MYSQL_PASSWORD=puppy_pass