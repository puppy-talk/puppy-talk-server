<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet author="system" id="008">
    <createTable tableName="user_activities">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="chat_room_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="activity_type" type="ENUM('MESSAGE_SENT', 'MESSAGE_READ', 'CHAT_OPENED')">
        <constraints nullable="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="activity_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
      baseColumnNames="user_id" baseTableName="user_activities"
      constraintName="fk_user_activities_user_id" onDelete="CASCADE"
      referencedColumnNames="id"
      referencedTableName="users"/>

    <addForeignKeyConstraint
      baseColumnNames="chat_room_id" baseTableName="user_activities"
      constraintName="fk_user_activities_chat_room_id" onDelete="CASCADE"
      referencedColumnNames="id"
      referencedTableName="chat_rooms"/>

    <createIndex indexName="idx_user_activities_user_id" tableName="user_activities">
      <column name="user_id"/>
    </createIndex>

    <createIndex indexName="idx_user_activities_chat_room_id" tableName="user_activities">
      <column name="chat_room_id"/>
    </createIndex>

    <createIndex indexName="idx_user_activities_activity_at" tableName="user_activities">
      <column name="activity_at"/>
    </createIndex>

    <createIndex indexName="idx_user_activities_activity_type" tableName="user_activities">
      <column name="activity_type"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>