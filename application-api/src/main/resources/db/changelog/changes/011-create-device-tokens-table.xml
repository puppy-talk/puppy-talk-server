<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="011-create-device-tokens-table" author="claude">
        <comment>사용자 디바이스 토큰 관리 테이블 생성</comment>
        
        <createTable tableName="device_tokens">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
            <column name="token" type="VARCHAR(512)">
                <constraints nullable="false"/>
            </column>
            
            <column name="device_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            
            <column name="platform" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            
            <column name="last_used_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- 인덱스 생성 -->
        <createIndex indexName="idx_device_tokens_user_id" tableName="device_tokens">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex indexName="idx_device_tokens_token" tableName="device_tokens" unique="true">
            <column name="token"/>
        </createIndex>
        
        <createIndex indexName="idx_device_tokens_user_device" tableName="device_tokens">
            <column name="user_id"/>
            <column name="device_id"/>
        </createIndex>
        
        <createIndex indexName="idx_device_tokens_platform_active" tableName="device_tokens">
            <column name="platform"/>
            <column name="is_active"/>
        </createIndex>
        
        <!-- 외래 키 제약 조건 -->
        <addForeignKeyConstraint baseTableName="device_tokens" baseColumnNames="user_id"
                                 constraintName="fk_device_tokens_user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>