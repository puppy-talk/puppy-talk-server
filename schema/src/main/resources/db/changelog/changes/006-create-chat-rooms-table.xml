<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet author="system" id="006">
    <createTable tableName="chat_rooms">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="pet_id" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="room_name" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="last_message_at" type="TIMESTAMP"/>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
      baseColumnNames="pet_id" baseTableName="chat_rooms"
      constraintName="fk_chat_rooms_pet_id" onDelete="CASCADE"
      referencedColumnNames="id"
      referencedTableName="pets"/>

    <createIndex indexName="idx_chat_rooms_pet_id" tableName="chat_rooms">
      <column name="pet_id"/>
    </createIndex>

    <createIndex indexName="idx_chat_rooms_last_message_at" tableName="chat_rooms">
      <column name="last_message_at"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>